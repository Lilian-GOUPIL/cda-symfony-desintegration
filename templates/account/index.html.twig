{% extends 'base.html.twig' %}

{% block title %}{{'breakdown' | trans}} - {{'my_account' | trans}}{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col-6 mx-auto">
            <div class="card shadow bg-dark p-4">
                {% if app.user.forcePasswordChange %}
                    <h1 class="text-center text-warning">{{'change_password_to_use_the_app' | trans}}</h1>
                {% else %}
                    <h1 class="text-center">{{'my_account' | trans}}</h1>
                {% endif %}
            </div>
            <div class="card shadow bg-dark p-4 my-4">
                <div class="card-title">
                    <h2 class="text-center">{{'my_infos' | trans}}</h2>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-bordered table-hover">
                        <thead>
                            <tr class="text-center">
                                <th class="align-middle" scope="col">{{'username' | trans}}</th>
                                <th class="align-middle" scope="col">{{'first_name' | trans}}</th>
                                <th class="align-middle" scope="col">{{'last_name' | trans}}</th>
                                <th class="align-middle" scope="col">{{'roles' | trans}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center">
                                <td class="align-middle">{{ app.user.username }}</td>
                                <td class="align-middle">{{ app.user.firstName }}</td>
                                <td class="align-middle">{{ app.user.lastName }}</td>
                                <td class="align-middle">
                                    {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
                                        <p class="m-1">{{'super_admin' | trans}}</p>
                                    {% endif %}
                                    {% if 'ROLE_ADMIN' in app.user.roles %}
                                        <p class="m-1">{{'admin' | trans}}</p>
                                    {% endif %}
                                    {% if 'ROLE_USER' in app.user.roles %}
                                        <p class="m-1">{{'user' | trans}}</p>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card shadow bg-dark p-4 my-4">
                <div class="card-title">
                    <h2 class="text-center">{{'change_password' | trans}}</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="">
                        <div class="form-group">
                            <label for="password" class="form-label">{{'new_password' | trans}}</label>
                            <input id="password" class="form-control" name="password" type="password" placeholder="{{'new_password' | trans}}..." required>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success" type="submit">{{'submit' | trans}}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
