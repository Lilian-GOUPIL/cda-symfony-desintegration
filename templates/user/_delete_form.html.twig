<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('{{'Êtes-vous sûr de vouloir supprimer cet utilisateur ?' | trans}}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger mt-4" data-toggle="tooltip" title="{{'Irréversible' | trans}}">{{'Supprimer' | trans}}</button>
</form>
