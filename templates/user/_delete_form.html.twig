<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('{{'confirm_delete_user' | trans}}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger mt-4" data-toggle="tooltip" title="{{'cannot_be_undone' | trans}}">{{'delete' | trans}}</button>
</form>
