<form method="post" action="{{ path('proposal_delete', {'id': proposal.id}) }}" onsubmit="return confirm('{{'Êtes vous sûr de vouloir supprimer cette proposition ?' | trans}}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proposal.id) }}">
    <button class="btn btn-danger mt-4" data-toggle="tooltip" title="{{'Irréversible' | trans}}">{{'Supprimer' | trans}}</button>
</form>
